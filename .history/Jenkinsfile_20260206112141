pipeline {
    agent any
    environment {
        IMAGE_NAME = "fahmidovi/jenkins-project:v1"
    }
    stages {
        stage('Fahmid Ovi - Build Docker Image'){
            steps {
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }
        stage('Fahmid Ovi - Login to Dockerhub'){
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'PASSWORD', usernameVariable: 'USERNAME')]) {
                    sh "echo $PASSWORD | docker login -u $USERNAME --password-stdin"
                }
            }
        }
        stage('Fahmid Ovi - Push image to Dockerhub'){
            steps {
                sh "docker push ${IMAGE_NAME}"
            }
        }
    }
    post {
        success {
            echo "The pipline succesfuly depoyed the image to Dockerhub"
        }
        failure {
            echo "The pipline failed to deploy the image to Dockerhub!"
        }
    }
}